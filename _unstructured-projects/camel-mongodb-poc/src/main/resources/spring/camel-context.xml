<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd             http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel-client" xmlns="http://camel.apache.org/schema/spring">
        <route id="mongo-insertion">
            <from id="route-timer" uri="timer://foo?period=1000&amp;repeatCount=10"/>
            <process id="_process1" ref="myProcessor"/>
            <log id="_log1" message="mongo-before-insertion-> ${body}"/>
            <to id="insertInMongo" uri="mongodb:myDb?database=customerdb&amp;collection=customer&amp;operation=insert"/>
            <log id="_log2" message="mongo-after-insertion-> ${body}"/>
        </route>
        <route id="mongo-findAll">
            <from id="route-timer" uri="timer://foo?period=5000&amp;repeatCount=2"/>
            <log id="_log3" message="mongo-before-findingAll-> ${body}"/>
            <to id="findAllInMongo" uri="mongodb:myDb?database=customerdb&amp;collection=customer&amp;operation=findAll"/>
            <log id="_log4" message="mongo-after-findingAll-> ${body}"/>
        </route>
    </camelContext>
    <bean class="com.mongodb.MongoClient" id="myDb">
        <constructor-arg ref="mongoClientUri"/>
    </bean>
    <bean class="com.mongodb.MongoClientURI" id="mongoClientUri">
        <constructor-arg index="0" value="${mongodb.uri}"/>
    </bean>
    <bean class="com.citi.tts.apac.mongo.demo.processors.MyProducer" id="myProcessor"/>
</beans>
